<article class="post">
  <div class="title">
    <a>{{story_title}}</a>
    <span> | By {{user.username}} | {{format_date created_at}}</span>
  </div>
  <div>
      {{story_body}}
  </div>
  <div class="meta">
    <a>{{comments.length}} {{format_plural "comment" comments.length}}</a>
  </div>
</article>